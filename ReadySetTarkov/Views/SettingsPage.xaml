<Page
    x:Class="ReadySetTarkov.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReadySetTarkov.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>
        <CheckBox Content="Start minimized" />
        <GroupBox Style="{StaticResource MaterialDesignHeaderedContentControl}">
            <GroupBox.Header>
                <CheckBox x:Name="cbShowTray" Content="Show tray icon" />
            </GroupBox.Header>
            <StackPanel Margin="10,0,0,0" IsEnabled="{Binding IsChecked, ElementName=cbShowTray}">
                <CheckBox Content="Minimize to tray" />
                <CheckBox Content="Close to tray" />
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Page>
