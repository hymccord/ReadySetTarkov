<tb:TaskbarIcon
    x:Class="ReadySetTarkov.Views.Tray"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReadySetTarkov.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    xmlns:vm="clr-namespace:ReadySetTarkov.ViewModels"
    d:DataContext="{d:DesignInstance vm:TrayViewModel}"
    IconSource="{Binding CurrentIcon}"
    mc:Ignorable="d">
    <tb:TaskbarIcon.ContextMenu>
        <local:MainContextMenu />
    </tb:TaskbarIcon.ContextMenu>
</tb:TaskbarIcon>
